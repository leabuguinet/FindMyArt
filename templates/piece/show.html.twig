{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1>Piece</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ piece.title }}</td>
            </tr>
            <tr>
                <th>Artist</th>
                <td>{{ piece.artist }}</td>
            </tr>
            <tr>
                <th>style</th>
                <td>{{ piece.style }}</td>
            </tr>
            <tr>
                <th>Availability</th>
                <td>{{ piece.availability ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ piece.image }}</td>
            </tr>
            <tr>
                <th>Size</th>
                <td>{{ piece.size }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ piece.updatedAt ? piece.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('piece_index') }}" class="btn btn-primary" role="button"><i class="fas fa-pencil-alt"></i></a>

    <a href="{{ path('piece_edit', {'id': piece.id}) }}" class="btn btn-primary" role="button"><i class="far fa-eye"></i></a>

    {{ include('piece/_delete_form.html.twig') }}
{% endblock %}
