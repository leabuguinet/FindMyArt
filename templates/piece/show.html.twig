{% extends 'base.html.twig' %}

{% block title %}Piece{% endblock %}

{% block body %}
    <h1 class="mt-5">Détails</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ piece.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ piece.title }}</td>
            </tr>
            <tr>
                <th>Artiste</th>
                <td>{{ piece.artist }}</td>
            </tr>
            <tr>
                <th>Style</th>
                <td>{{ piece.style }}</td>
            </tr>
            <tr>
                <th>Disponibilité</th>
                <td>{{ piece.availability ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ piece.image }}</td>
            </tr>
            <tr>
                <th>Taille</th>
                <td>{{ piece.size }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ piece.description }}</td>
            </tr>
            <tr>
                <th>Matériaux et Technique</th>
                <td>{{ piece.materialsTechnique }}</td>
            </tr>
            <tr>
                <th>Date de création</th>
                <td>{{ piece.creationDate}}</td>
            </tr>
            <tr>
                <th>Date d'ajout</th>
                <td>{{ piece.updatedAt ? piece.updatedAt|date('d-m-Y') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('piece_edit', {'id': piece.id}) }}" class="btn btn-primary m-2" role="button"><i class="fas fa-pencil-alt"></i></a>

    {{ include('piece/_delete_form.html.twig') }}

    <a href="{{ path('piece_index') }}" class="mb-5"><i class="fas fa-arrow-alt-circle-left m-2"></i>Retour à la liste</a>

{% endblock %}
