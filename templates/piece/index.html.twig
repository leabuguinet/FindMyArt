{% extends 'base.html.twig' %}

{% block title %}Piece index{% endblock %}

{% block body %}
    
<div class="container">
    <h1>Piece index</h1>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Artist</th>
                <th>Style</th>
                <th>Availability</th>
                <th>Image</th>
                <th>UpdatedAt</th>
                <th>Size</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for piece in pieces %}
            <tr>
                <td>{{ piece.id }}</td>
                <td>{{ piece.title }}</td>
                <td>{{ piece.artist }}</td>
                <td>{{ piece.availability ? 'Yes' : 'No' }}</td>
                <td>{{ piece.image }}</td>
                <td>{{ piece.updatedAt ? piece.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ piece.size }}</td>
                <td>
                    <a href="{{ path('piece_show', {'id': piece.id}) }}" class="btn btn-primary" role="button"><i class="fas fa-pencil-alt"></i></a>
                    <a href="{{ path('piece_edit', {'id': piece.id}) }}" class="btn btn-primary" role="button"><i class="far fa-eye"></i></a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('piece_new') }}" class="btn btn-success" role="button">Create new +</a>
</div>
{% endblock %}
