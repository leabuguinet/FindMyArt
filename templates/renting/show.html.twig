{% block title %}Renting{% endblock %}

{% block body %}
    <h1>Renting</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ renting.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ renting.date ? renting.date|date('d-m-Y') : '' }}</td>
